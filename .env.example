# DynamoDB API - Environment Variables Example
# Copy this file to .env and fill in the values for your environment

# ============================================
# AWS Configuration
# ============================================
# Region where DynamoDB table is located
AWS_REGION=local

# DynamoDB endpoint (local development only)
AWS_ENDPOINT_URL_DYNAMODB=http://localhost:8000

# AWS credentials
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# ============================================
# OpenTelemetry Configuration
# ============================================
# Enable/disable OpenTelemetry SDK
OTEL_SDK_DISABLED=false

# OTLP exporter endpoint (gRPC)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Use insecure (no TLS) connection
OTEL_EXPORTER_OTLP_INSECURE=true

# Exporter types
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp

# ============================================
# OpenTelemetry Resource Attributes
# ============================================
# Resource attributes for telemetry data
# Format: key1=value1,key2=value2
OTEL_RESOURCE_ATTRIBUTES=service.name=dynamodb-api,service.version=1.0.0,deployment.environment=dev,team=backend

# ============================================
# Datadog Configuration (Optional)
# ============================================
# Datadog API key (required for Datadog integration)
# Get from: https://app.datadoghq.com/organization/settings/api-keys
DD_API_KEY=your_api_key_here

# Service name in Datadog
DD_SERVICE=dynamodb-api

# Environment (dev, staging, prod)
DD_ENV=dev

# Service version
DD_VERSION=1.0.0

# Datadog Agent host
DD_AGENT_HOST=localhost

# APM trace agent port
DD_TRACE_AGENT_PORT=8126

# Full trace agent URL
DD_TRACE_AGENT_URL=http://localhost:8126

# DogStatsD metrics port
DD_DOGSTATSD_PORT=8125

# Trace sampling rate (0.0 to 1.0)
DD_TRACE_SAMPLE_RATE=1.0

# Enable metrics collection
DD_METRICS_ENABLED=true

# Inject trace IDs into logs
DD_LOGS_INJECTION=true

# Enable profiling
DD_PROFILING_ENABLED=true

# Profiling sample rate (0.0 to 1.0)
DD_PROFILING_SAMPLE_RATE=0.1

# ============================================
# Application Configuration
# ============================================
# Go environment
GO_ENV=development

# Log level (debug, info, warn, error)
LOG_LEVEL=debug

# Server port
PORT=7000

# Server bind address
BIND_ADDRESS=0.0.0.0

# ============================================
# Advanced Configuration (Optional)
# ============================================
# OTEL sampling strategy
# Options: always_on, always_off, traceidratio, parentbased_always_on, parentbased_always_off
OTEL_TRACES_SAMPLER=parentbased_always_on

# Batch processor schedule delay (ms)
OTEL_BSP_SCHEDULE_DELAY=5000

# Batch processor max queue size
OTEL_BSP_MAX_QUEUE_SIZE=2048

# Batch processor max export batch size
OTEL_BSP_MAX_EXPORT_BATCH_SIZE=512

# Batch processor timeout (ms)
OTEL_BSP_TIMEOUT=30000

# ============================================
# Docker Configuration (Optional)
# ============================================
# Compose project name
COMPOSE_PROJECT_NAME=dynamodb-api

# Network name
COMPOSE_NETWORK=dynamodb-api-network
